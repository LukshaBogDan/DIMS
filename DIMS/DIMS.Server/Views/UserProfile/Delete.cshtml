@model HIMS.Server.Models.UserProfileViewModel
@{
    Layout = null;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title w-60" id="ModalLabel">Delete User Profile</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="hidden">
                    @Html.LabelFor(model => model.UserId)
                    @Html.EditorFor(model => model.UserId)
                </div>
                <span>Do you want to delete @Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.LastName)?</span>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Delete" class="btn btn-primary" />
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>

}

